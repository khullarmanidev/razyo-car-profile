<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
   <body>
      <referenceBlock name="customer_account_navigation">
          <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-car">
              <arguments>
                  <argument name="path" xsi:type="string">razoyocarprofile/customer/index</argument>
                  <argument name="label" xsi:type="string">My Car</argument>
                  <argument name="sortOrder" xsi:type="number">210</argument>
              </arguments>
          </block>
         <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-car-profile">
            <arguments>
               <argument name="path" xsi:type="string">razoyocarprofile/customer/carprofile</argument>
               <argument name="label" xsi:type="string">My Car Profile</argument>
               <argument name="sortOrder" xsi:type="number">210</argument>
            </arguments>
         </block>
      </referenceBlock>
   </body>
</page>
